page{
    height: 100%;
}
.container{
    background-color: #f5f5f9;
    justify-content: initial;
}
.form-box{
    width:100rpx;
    height: 100%;
    background-color: #fff;
    writing-mode: vertical-lr;
}
.row-wrap{
    display: flex;
    font-size: 28rpx;
}
.row-wrap .label{
    line-height: 115rpx;
    padding: 50rpx 0;
    color: #000;
}
.row-wrap .label-right{
    /* flex: 1;
    height: 90rpx;
    line-height: 88rpx;
    padding-top: 10rpx;
    margin-left: 30rpx; */
}
.row-wrap .label-right input{
    border: 1px solid #eee;
    font-size: 28rpx;
    width: 80rpx;
    height: 750rpx;
    margin: 0 8rpx;
}
.row-wrap .right-box{
    margin-right: 30rpx; 
}
.arrow-right{
    width: 15rpx;
    height: 24rpx;
}
.save-btn,
.cancel-btn{
    width: 690rpx;
    height: 80rpx;
    text-align: center;
    margin-top:30rpx; 
    border-radius: 6rpx;
    box-sizing: border-box;
}
.save-btn{
    background-color: #009f3c;
    color:#fff;
    writing-mode: vertical-lr;
    padding-left: 0;
    padding-right: 0;
    height: 300rpx;
    width: 80rpx;
    position: fixed;
    right: 180rpx;
    bottom: 60rpx;
}
button[type="default"]{
    background-color: #ffffff;
    color:#000;
    writing-mode: vertical-lr;
    height: 300rpx;
    width: 80rpx;
    padding-left: 0;
    padding-right: 0;
    position: fixed;
    right: 60rpx;
    bottom: 60rpx;
}
.addr-details{
    height: auto;
    padding: 30rpx 0;
    margin-left:30rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    font-size: 28rpx;
}
.addr-details .label{
    margin:auto 0 auto 0;
    width: 160rpx;
    color: #000
}
.addr-details textarea{
    box-sizing: border-box;
    width: 480rpx;
    overflow: scroll;
}
picker {
    min-width: 20rpx;
    height: 100%;
    margin-right: 20rpx;
}
.hui{
    color: #777;
}