<view class='noApply' wx:if="{{applyStatus == -1}}">
  <form bindsubmit="bindSave" report-submit="true">
    <image class="logo" src="/images/fx.png" mode="widthFix" />
    <view class="profile">{{fxsmls.fxsml0002}}</view>
    <button type="primary" class="mini-btn" formType="submit">{{fxsmls.fxsml0006}}</button>
  </form>
</view>

<view class='noApply' wx:if="{{applyStatus == 0}}">
  <form bindsubmit="goShop" report-submit="true">
    <image class="logo" src="/images/fx.png" mode="widthFix" />
    <view class="profile">{{fxsmls.fxsml0003}}</view>
    <button type="primary" class="mini-btn" formType="submit">{{fxsmls.fxsml0001}}</button>
  </form>
</view>

<view class='noApply' wx:if="{{applyStatus == 1}}">
  <form bindsubmit="goShop" report-submit="true">
    <image class="logo" src="/images/fx.png" mode="widthFix" />
    <view class="profile">{{fxsmls.fxsml0004}}</view>
    <view wx:if="{{applyInfo.remark}}" class="profile" style="color:red;">{{applyInfo.remark}}</view>
    <button type="primary" class="mini-btn" formType="submit">{{fxsmls.fxsml0001}}</button>
  </form>
</view>

<view class='noApply' wx:if="{{applyStatus == 2}}">
  <form bindsubmit="goShop" report-submit="true">
    <image class="logo" src="/images/fx.png" mode="widthFix" />
    <view class="profile">{{fxsmls.fxsml0005}}</view>
    <button type="primary" class="mini-btn" formType="submit">{{fxsmls.fxsml0001}}</button>
  </form>
</view>