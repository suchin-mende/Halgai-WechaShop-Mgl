                <view class="song-gorry">{{ordmls.ordml0019}}</view>                
                <view class="xiao-bye">¥ {{orderDetail.orderInfo.amount}}</view>
            </view>
            <view class="row-boxb">
                <view class="boy-gest">{{ordmls.ordml0020}}</view>
                <view class="right-text">+ ¥ {{orderDetail.orderInfo.amountLogistics}}</view>
            </view>
            <view class="row-boxc">
                <view class="jeck-toolis">{{ordmls.ordml0021}}</view>
                <view class="right-text">¥ {{orderDetail.orderInfo.amountReal}}</view>
            </view>
        </view>
        <image  class="icon" src="/images/order-details/icon-jycg.png"></image>
         <image class="icon" src="/images/order-details/icon-ddfh.png"></image>
<view class='zen-zeng'>
<view class="peisong-way" text="true">
<view class="row-box">
                <view class="row-label">{{ordmls.ordml0017}}</view>
                <view class="right-text">
                    <input name="remark" type="text" class="liuyan" placeholder="{{ordmls.ordml0018}}" />
