/* componets/showModal/modal.wxss */
.mask{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.4);
  z-index: 9999;
}

.modal-content{
  display: flex;
  flex-direction: row;
  width: 90%;
  height: 80%;
  background-color: #fff;
  border-radius: 10rpx;
}

.modal-btn-wrapper{
  display: flex;
  flex-direction: column;
  width: 100rpx;
  line-height: 100rpx;
  border-left: 1px solid rgba(7,17,27,0.1);
}

.cancel-btn, .confirm-btn{
  flex: 1;
  height: 50%;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  color: #009f3c;
  writing-mode: vertical-lr;
}

.cancel-btn{
  border-bottom: 2rpx solid rgba(7,17,27,0.1);
}

.main-content{
  flex: 1;
  display: flex;
  height: 100%;
  overflow-y: hidden; 
}
.s-title{
  writing-mode: vertical-lr;
  width: 100rpx;
  height: 100%;
  line-height: 100rpx;
  border-right: 1px solid rgba(7,17,27,0.1);
  text-align: center;
}
.s-text{
  writing-mode: vertical-lr;
  text-align: center;
  word-break: break-all;
  padding: 100rpx;
}