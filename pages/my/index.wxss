.container {
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
}

.head-menu {
  display: flex;
  width: 90%;
  border-bottom: 2px solid #eee;
  padding-bottom: 50rpx;
}

.userinfo {
	display: flex;
	flex-direction: column;
	align-items: center;
}
.userinfo-avatar {
	width: 160rpx;
	height: 160rpx;
}
.userinfo-nickname {
  margin-right: 20rpx;
  margin-left: 20rpx;
  font-size: 14px;
}

.asset {
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  margin-top: 130rpx;
}
.asset .item {
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 13px;
  line-height: 20px;
  color:#333;
  width: 100rpx;
}

.asset .item .text {
  writing-mode: vertical-lr;
  margin-bottom: 20rpx;
  margin-left: 30rpx;
}

.asset .item right {
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 13px;
  line-height: 20px;
  color:#333;
  width: 100rpx;
}

.asset .item right .text {
  writing-mode: lr;
}

.version {
  width:100%;
  height: 40rpx;
	line-height: 40rpx;
	font-size: 24rpx;
	text-align: center;  
  padding: 40rpx;
}

.my-item-total{
    writing-mode: vertical-lr;
    margin-left: 20rpx;
}

.t-item {
  display: flex;
  margin-top: 70rpx;
}

.my-item{
    writing-mode: vertical-lr;
    border-left: 1px solid #eee;
    height: 300rpx;
    padding-top: 10rpx;
    line-height: 85rpx;
    font-size:14px;
    width: 80rpx;
}
.my-item:first-child {
  border-left: 0px solid;
}

.t-order {
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.order-shortcut {
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.order-shortcut .item {
  display: flex;
  flex-direction: column;
  width: 100rpx;
  text-align: center;
}
.order-shortcut .item .icon {
  width: 60rpx;
  height: 60rpx;
  margin-left: 10rpx;
}
.order-shortcut .item .text {
  writing-mode: vertical-lr;
  font-size: 13px;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.to-authorize{
  writing-mode: vertical-lr;
  border: none;
  padding: 0rpx;
  margin: 0rpx;
  background: none;
  height: auto;
  line-height: auto;
}
/* 绑定手机号 */
.bind-phone-number{
  writing-mode: vertical-lr;
}
button.btn {
  writing-mode: vertical-lr;
    color:#333;
    background:#eee;
    height:310rpx;
    line-height: 0;
    font-size: 40rpx;
    margin-right: 20rpx;
}