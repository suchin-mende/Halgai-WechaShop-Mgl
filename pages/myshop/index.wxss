/* pages/openshop-firstPage/index.wxss */
page {
  height: 100%;
}
.page-section {
  height: 50%;
  width: 100%;
  display: flex;
}
.button-view {
  writing-mode: vertical-lr;
  margin: auto;
  width: 70%;
  height: 70%;
  border: black 2px dashed;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
}
.button-view > image {
  width: 100%;
}
text {
  writing-mode: vertical-lr;
}
.text-box {
  margin: auto;
  margin-top: 20rpx;
}
.photo-box {
}
.title {
  writing-mode: vertical-lr;
  position: absolute;
  font-size: 60rpx;
  top: 30%;
}
.img , .img-add {
  width: 200rpx;
  height: 150rpx;
  margin: 20rpx 14rpx;
}
.page-image {
  display: flex;
  flex-wrap: wrap;
  align-content: baseline;
  width: 90%;
  margin: auto;
}
.img-add {
  display: flex;
  border: 2px #707070 dashed;
  width: 190rpx;
  border-radius: 20rpx;
}
.img-add > image {
  width: 50%;
  height: 50%;
  margin: auto;
}
.del-img {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 15rpx;
  top: 22rpx;
}
.typetitle {
  display: flex;
  line-height: 50rpx;
  transform: rotate(90deg);
  transform-origin: left bottom;
}
.typetitle > input {
  margin-left: 20rpx;
  border: 1px black solid;
  width: 30%;
}
.contentPart {
  position: absolute;
    width: 80%;
    height: 80%;
    right: 60rpx;
    writing-mode: vertical-lr;
    display: flex;
    flex-direction: column;
}
.section {
  position: relative;
}
.content {
  padding: 15rpx;
  border: 1px black solid;
  width: 50%;
  overflow: hidden;
  word-break: break-all;
}
.exitButton {
  writing-mode: vertical-lr;
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
textarea {
  width: 100%;
}