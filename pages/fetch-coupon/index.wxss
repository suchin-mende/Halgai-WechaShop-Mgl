page{
    height: 100%;
}
.container{
    background-color: #f5f5f9;
    justify-content: initial;
}
.form-box{
    width:100rpx;
    height: 1205rpx;
    /* right: 300rpx; */
    margin-right: 324px;
    position: relative;
    background-color: #fff;
}
.row-wrap{
    width: 300rpx;
    height: 120rpx;
    line-height: 88rpx;
    margin-left: 30rpx;
    display: flex;
    font-size: 28rpx;
    justify-content: space-between;
}
.row-wrap .label{
    width: 160rpx;
    height: 160rpx;
    font-size: 40rpx;
    writing-mode: vertical-lr;
    position:absolute;
    margin-left: 5rpx;
    color: #000
    
}
.row-wrap .label-right{
    flex: 1;
    height: 88rpx;
    line-height: 88rpx;
     
}
.row-wrap .label-right input{
    height: 200rpx;
    width: 300rpx;
    font-size: 25rpx; 
    /* margin-left: 30px; */
    margin-top: 6px;
    writing-mode: vertical-lr; 
}
.row-wrap .right-box{
    margin-right: 30rpx; 
}
.arrow-right{
    width: 15rpx;
    height: 24rpx;
}
.save-btn,
.cancel-btn{
    width: 690rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    margin-top:30rpx; 
    border-radius: 6rpx;
    box-sizing: border-box;
}
.save-btn{
    background-color: #cdcdcd;
    color:#fff;
    width: 100rpx;
    height: 150rpx;
    float: left;
    text-align: center;
    line-height: 19px;
    font-size: 36rpx;
    margin-top: 936rpx;
    writing-mode: vertical-lr;
}
button[type="default"]{
    background-color: #ffffff;
    color:#000;
}
.addr-details{
    height: auto;
    padding: 30rpx 0;
    margin-left:30rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    font-size: 28rpx;
}
.addr-details .label{
    margin:auto 0 auto 0;
    width: 160rpx;
    color: #000
}
.addr-details textarea{
    box-sizing: border-box;
    width: 480rpx;
    overflow: scroll;
}
picker {
    min-width: 20rpx;
    height: 100%;
    margin-right: 20rpx;
}
.hui{
    color: #777;
}