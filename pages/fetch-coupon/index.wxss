page{
    height: 100%;
}
.container{
    background-color: #f5f5f9;
    justify-content: initial;
}
.form-box{
    width:750rpx;
    height: 136rpx;
    /* right: 300rpx; */
    /* margin-right: 5rpx; */
    position: relative;
    background-color: #009f3c;
}
.row-wrap{
    /* height: 120rpx; */
    line-height: 88rpx;
    display: flex;
    font-size: 28rpx;
    justify-content: space-between;
}
.row-wrap .label{
    width: 160rpx;
    height: 160rpx;
    font-size: 35rpx;
    writing-mode: vertical-lr;
    margin-left: 5rpx;
    padding-top: 30rpx;
    color: #fff;
    
}
.row-wrap .label-right{
    flex: 1;
    height: 88rpx;
    line-height: 88rpx;
    /* writing-mode: vertical-lr; */
     
}
.row-wrap .label-right input{
    /* height: 80rpx; */
    width: 450rpx;
    font-size: 30rpx; 
    /* padding-top: 15rpx; */
    /* border: 1rpx solid #c8c8c8; */
    margin-top: 32rpx;
    background-color: #fff;
    padding: 10rpx 0rpx 10rpx 0rpx;
    /* writing-mode: vertical-lr;  */
}
.row-wrap .right-box{
    margin-right: 30rpx; 
}
.arrow-right{
    width: 15rpx;
    height: 24rpx;
}
.save-btn,
.cancel-btn{
    width: 690rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    margin-top:30rpx; 
    border-radius: 6rpx;
    box-sizing: border-box;
}
.save-btn{
    background-color: #fff;
    color:#fff;
    width: 30%;
    height: 100rpx;
    font-size: 40rpx;   
    line-height: 86rpx;
    writing-mode: vertical-lr;
    
}
button[type="default"]{
    background-color: #ffffff;
    color:#000;
}
.addr-details{
    height: auto;
    padding: 30rpx 0;
    margin-left:30rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    font-size: 28rpx;
}
.addr-details .label{
    margin:auto 0 auto 0;
    width: 160rpx;
    color: #000
}
.addr-details textarea{
    box-sizing: border-box;
    width: 480rpx;
    overflow: scroll;
}
picker {
    min-width: 20rpx;
    height: 100%;
    margin-right: 20rpx;
}
.hui{
    color: #777;
}